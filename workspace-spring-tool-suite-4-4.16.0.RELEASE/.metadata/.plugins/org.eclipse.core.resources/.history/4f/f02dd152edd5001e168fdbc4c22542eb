package com.cg.SpringBootJPA.SpringBootJPA.CRUD;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;

@Entity(name="Customers")
public class CustomerDetails {
	@Id
	@GeneratedValue(strategy=GenerationType.IDENTITY)
	private int custId;
	@ManyToOne(cascade=CascadeType.ALL)
	//join column
	@JoinColumn(name="custId")
	private String custname;
	private String address;
	private OrdersList ord_list;
	public CustomerDetails() {
		
	}
	

	
	public CustomerDetails(int custId, String custname, String address, OrdersList ord_list) {
		super();
		this.custId = custId;
		this.custname = custname;
		this.address = address;
		this.ord_list = ord_list;
	}



	public int getCustId() {
		return custId;
	}
	public String getCustname() {
		return custname;
	}
	public void setCustname(String custname) {
		this.custname = custname;
	}
	public String getAddress() {
		return address;
	}
	public void setAddress(String address) {
		this.address = address;
	}
	
	public OrdersList getOrd_list() {
		return ord_list;
	}

	public void setOrd_list(OrdersList ord_list) {
		this.ord_list = ord_list;
	}



	@Override
	public String toString() {
		return "CustomerDetails [custId=" + custId + ", custname=" + custname + ", address=" + address + ", ord_list="
				+ ord_list + "]";
	}
	






}
